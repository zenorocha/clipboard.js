{
  "name": "clipboard",
  "version": "1.3.1",
  "description": "Modern copy to clipboard. No Flash. Just 2kb",
  "repository": "zenorocha/clipboard.js",
  "main": "dist/clipboard.js",
  "browser": "src/clipboard.js",
  "browserify": {
    "transform": [
      ["babelify", { "loose": "all" }]
    ]
  },
  "license": "MIT",
  "keywords": [
    "clipboard",
    "copy",
    "cut"
  ],
  "dependencies": {
    "delegate-events": "^1.1.1",
    "tiny-emitter": "^1.0.0",
    "component-event": "^0.1.4"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "karma": "^0.13.10",
    "karma-browserify": "^4.3.0",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sinon": "^1.0.4",
    "mocha": "^2.3.3",
    "phantomjs-polyfill": "0.0.1",
    "uglify": "^0.1.5"
  },
  "scripts": {
    "build": "npm run build-debug && npm run build-min",
    "build-debug": "browserify src/clipboard.js -s Clipboard -o dist/clipboard.js",
    "build-min": "uglify -s dist/clipboard.js -o dist/clipboard.min.js",
    "test": "npm run test-browser && npm run test-server",
    "test-browser": "karma start --single-run",
    "test-server": "mocha test/module-systems.js"
  }
}
